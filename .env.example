# Gateway settings
PORT=8080
MCP_API_KEY=change-me-to-a-long-random-string

# Filesystem jail
FS_ROOT=D:\Hearthlink\shared

# Denylist, comma separated globs evaluated inside jail
DENY_GLOBS=**/.git/**,**/*.pem,**/*.key

# Write allow paths, comma separated, relative to FS_ROOT
WRITE_ALLOW=memory/**,scratch/**

# Upstream FS MCP server process
FS_MCP_COMMAND=node
FS_MCP_ARGS=external/modelcontextprotocol/packages/servers/dist/filesystem-stdio.js

# Max request body size
MAX_BODY=1mb
